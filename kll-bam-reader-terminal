sudo apt update
sudo apt install git cmake g++ build-essential
git clone https://github.com/apache/datasketches-cpp.git

sudo apt update
sudo apt install libhts-dev libbz2-dev liblzma-dev libcurl4-gnutls-dev zlib1g-dev


git clone https://github.com/samtools/htslib.git
cd htslib
autoreconf -i
./configure
make
sudo make install
sudo ldconfig

g++ -std=c++11 -O3 \
    -I./datasketches-cpp/common/include \
    -I./datasketches-cpp/kll/include \
    kll_bam_reader.cpp \
    -lhts -lz -lpthread \
    -o kll_bam_reader

./kll_bam_reader HG002.GRCh38.chr1_2_21.bam

